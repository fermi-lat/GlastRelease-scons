package FluxSvc
version v6r12p2

# $Id$

branches FluxSvc cmt doc

use GlastPolicy *

use Event   *

use GlastSvc *
use astro v0r*

# prevent clients from automatically seeing flux.lib, includes
use flux * -no_auto_imports 

use ntupleWriterSvc *

apply_pattern packageShr
apply_pattern package_include

# this sets path for the Gaudi ParticleProperySvc to find the file 
#  $(FlUXSVCROOT)/cdf/particleproperty.cdf
set LHCBDBASE "${FLUXSVCROOT}"


#=============================================================
private


# get flags to build shared library
apply_pattern package_Cshlibflags

macro headers      "" WIN32 "*.h"
macro source "*.cxx" WIN32 "*.h *.cxx *.txt"

macro interface_headers "" WIN32 "-s=../FluxSvc/ *.h"

# for includes from flux (for now)
macro FluxSvc_cppflags '$(ppcmd)"$(FLUXROOT)"'

library FluxSvc -import=flux\
 $(interface_headers)\
 -s=Dll *.cxx\
 -s=../src $(source)


public
apply_pattern package_test
macro_append test_FluxSvc_files "" WIN32 "test/*.xml"
