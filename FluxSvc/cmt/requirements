apply_pattern packageShr
apply_pattern package_include

#=============================================================
use facilities v2*

private




# get flags to build shared library
apply_pattern package_Cshlibflags
apply_pattern package_headers

#static library
library hist_lib -no_share test/flux/rootplot.cxx \
 test/flux/rootEnergyHist.cxx test/flux/rootHist.cxx \
 test/flux/rootAngleHist.cxx

macro libs ""   WIN32   "$(FluxSvcDir)/hist_lib.lib

library FluxSvc  *.cxx \
 Dll/*.cxx $(libs) \
 ${FluxSvc_headers}

application testMgr test/flux/testMgr.cxx \
 *.cxx $(libs) \
  ${FluxSvc_headers}

application rootplots test/flux/roottest.cxx \
 *.cxx $(libs) \
 ${FluxSvc_headers}

macro_append FluxSvc_headers "" WIN32 "../xml/*.xml test/*.txt test/*.xml"
# test program, using local joboptions
public set JOBOPTIONS ${FLUXSVCROOT}/src/test/jobOptions.txt
apply_pattern package_test

