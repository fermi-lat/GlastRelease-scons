package FluxSvc
version v2r1

branches FluxSvc mgr doc

use flux v4
use GaudiSvc

include_dirs $(FLUXSVCROOT)

library FluxSvc  *.cxx *.h\
 Dll/*.cxx\
 ../FluxSvc/*.h 

# define link options
apply_pattern package_Clinkopts
apply_pattern packageShr

#=============================================================
private

# get flags to build shared library

apply_pattern package_Cshlibflags


# test program, using local joboptions

macro JobOptions  "src/test/jobOptions.txt"
set JOBOPTIONS ${FLUXSVCROOT}/$(jobOptions)

application testFluxSvc test/TestMain.cxx test/FluxTestAlg.cxx ${jobOptions} 