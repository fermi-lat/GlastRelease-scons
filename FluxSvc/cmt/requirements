package FluxSvc
version v1

branches FluxSvc mgr doc

use flux
use GaudiSvc


library FluxSvc  *.cxx *.h\
 Dll/*.cxx\
 ../FluxSvc/*.h 

include_path $(FLUXSVCROOT)

macro FluxSvc_lib " -L ${FLUXSVCROOT}/${CMTCONFIG} -lFluxSvc "\
    VisualC "Service.obj ${FLUXSVCROOT}/${BINDIR}/libFluxSvc.lib "

set   FluxSvcShr           "${FLUXSVCROOT}/${DEBUGDIR}/libFluxSvc"


private

# need to use this only to make the dll available for the test program (which does not use it!)
use RootHistCnv

# note that the debug versions of the used libraries are inserted below


# for the moment, use libraryshr_linkopts to fix red hat 6.2 linking problem
macro FluxSvc_shlibflags   "$(libraryshr_linkopts) $(use_linkopts)"\
      VisualC               "Service.obj $(componentshr_linkopts) $(use_linkopts) $(Win32Debug)"



private

macro WinJobOptions ""  VisualC   "test/jobOptions.txt"

application testFluxSvc test/TestMain.cxx test/FluxTestAlg.cxx ${WinJobOptions} 