package FluxSvc
version v6r16p3

# $Id$
author  T. Kozanecki <hansl$slac.stanford.edu> T. Burnett

branches FluxSvc cmt doc cdf 

use GlastPolicy v*
# this is a Gaudi shrared component package
apply_pattern packageShr
apply_pattern package_include

use GaudiInterface * IExternal
use CLHEP * IExternal
use facilities *

#  set  path to particle properties (used by Gaudi ParticlePropertySvc) 
#  $(FlUXSVCROOT)/cdf/particleproperty.cdf
set LHCBDBASE  "${FLUXSVCROOT}"

# declare external sources, in public section for xml
use GRB * celestialSources -no_auto_imports


# _____________________________________________________________

private
use Event       v10*
use GlastSvc    v9r*
use astro       v1r*
#use genericSources * celestialSources
#use Pulsar  * celestialSources

use ntupleWriterSvc v3r*
use XMLEXT * IExternal
# libraries that are only linked locally
use flux        v8*  -no_auto_imports

macro  source  "*.cxx"  WIN32 "*.h *.cxx *.txt"
macro_append includes  ' $(ppcmd)"$(FLUXROOT)" '
#  shared component library 
apply_pattern package_Cshlibflags

private
macro_append ROOT_libs " -lHist -lGraf "\
                 WIN32 " libHist.lib libGraf.lib " 

library  FluxSvc   -import=flux -import=GRB \
     -s=../FluxSvc $(source) \
     -s=Dll *.cxx\
     -s=../src $(source)


#  build the test 
apply_pattern  package_test  import=flux 
macro_append   jobOptions ""    WIN32 " test/*.xml"



