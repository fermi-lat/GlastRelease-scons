package CalDigi

version v1r3

branches src mgr doc

use GlastSvc v*
use Event v*
use CalUtil v1r*	

use facilities

use xml

apply_pattern packageShr


### hide the packages used only for test program
#=============================================================
private
use RootPolicy *
use RootIo v6*


#the following prepend makes the includes folder available locally only: avoid the package_include
#apply_pattern package_include
macro_prepend includes "-I $(CALDIGIROOT) " WIN32 "/I $(CALDIGIROOT) "

#apply_pattern package_include


apply_pattern package_headers

library CalDigi *.cxx Dll/*.cxx ${CalDigi_headers}


apply_pattern package_Cshlibflags 
set JOBOPTIONS ${CALDIGIROOT}/src/test/jobOptions.txt

# build this for testing, console only. Load all objects directly. 

application test_CalDigi ${GlastMain} test/*.cxx  
