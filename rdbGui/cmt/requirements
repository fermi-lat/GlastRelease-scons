use GlastPolicy  v*
use FOX v0r125p*  IExternal
use rdbModel v2r*
use facilities v2r*

apply_pattern shared_library

private

apply_pattern package_headers


macro alt_cppflags "" \
    vsnet '$(includes) /nologo /DWIN32 /MT /Gy /W3 /GR /Ob2 /Zm500 /EHsc /D"_USE_MATH_DEFINES" /Zc:forScope /wd4267 /wd4244'\
  WIN32  macro  cppflags  '$(cppoptions) /nologo /DWIN32 /FD /c /GX /W3 /GR /Ob2 /Zm500 /FI"GlastPolicy\nt_config.h"'

macro set_cppflags "" \
   vsnet macro cppflags "$(alt_cppflags)" \
   WIN32 macro cppflags "$(alt_cppflags)"

macro alt_cpplinkflags "" \
   WIN32 macro cpplinkflags  "/nologo $(makeLinkMap) kernel32.lib user32.lib ws2_32.lib advapi32.lib shell32.lib"    
   
macro set_cpplinkflags "" \
   WIN32 macro cpplinkflags "$(alt_cpplinkflags)"



