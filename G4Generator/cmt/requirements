package G4Generator
version v1r1
#$Header$

use GlastPolicy v4

# expect these to be already in the CMTPATH!
use GaudiSvc
use GaudiAlg

# this is only a shareable package
apply_pattern packageShr

# export nothing but the dll path
#=============================================================
private
# this version has Geant4 library path
use EXTLIB v2r4p2


#  this is a checkout package
# that should need only the Gaudi system stuff
use Geant4   v1

use facilities v2r1
use XMLEXT   v2r2
use xml      v4
use xmlUtil  v2r6

use idents   v2r3p1
use detModel v2r6

use instrument      v5r1
use data     v4r2
use GlastEvent v4
use GlastSvc        v3r1

# flux determination
use flux     v6
use FluxSvc  v4


#to make standard display available
use gui      v2r6p1
use GuiSvc   v2r4
use geometry v3
use geomrep  v4r1


# get flags to build shared library

apply_pattern package_Cshlibflags

apply_pattern package_headers

# this to allow includes of internal "package" 
macro_prepend includes "-I ../src " WIN32 "/I ..\src "

library G4Generator ${G4Generator_headers} *.cxx   Dll/*.cxx

# stuff for test
public
set JOBOPTIONS ${G4GENERATORROOT}/src/test/jobOptions.txt

# alternative test program that links stuff into the exe


macro_prepend gui_linkopts "$(GuiSvc_lib) ${guiapp_linkopts} -u GuiSvc_loadRef  -ldl "\
              WIN32 " ${guiapp_linkopts} $(GuiSvc_lib)  /include:_GuiSvc_loadRef "

macro other_source "" WIN32 "test/*.txt test/*.xml *.h test/*.h" 
application G4Test ${GlastMain} test/*.cxx *.cxx  Dll/*.cxx ${other_source} ${Win32Resource}




