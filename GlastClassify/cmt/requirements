package GlastClassify

version v0r3p1
author T. Burnett <tburnett@u.washington.edu>
# $Header$
use GlastPolicy *

apply_pattern package_include
apply_pattern package_linkopts
apply_pattern package_stamps


private
#-----------------------------------------------------------------
macro source "*.cxx " WIN32 "*.h *.cxx"
library  GlastClassify -no_share  -s=../GlastClassify $(source) -s=../src $(source)

use classifier *

use ROOT * IExternal
macro_append ROOT_linkopts " $(ROOT_GUI_libs)"
macro_append ROOT_cppflags "" WIN32 " /wd4800 "


macro OUTPUT "../data"


# this app creates the classification trees
application classify -s=../src/classify $(source)\
    -s=$(OUTPUT)/goodcal *.txt\
    -s=$(OUTPUT)/vertex_thin *.txt\
    -s=$(OUTPUT)/vertex_thick *.txt\
    -s=$(OUTPUT)/psf_thin_vertex *.txt\
    -s=$(OUTPUT)/psf_thick_vertex *.txt\
    -s=$(OUTPUT)/psf_thin_track *.txt\
    -s=$(OUTPUT)/psf_thick_track *.txt

# app to run tests on the training data
application test_GlastClassify -s=../src/test $(source)

