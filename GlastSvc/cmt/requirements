apply_pattern package_headers

macro_append GlastSvc_headers "" WIN32 " ..\GlastSvc\Reco\*.h \
                 ../GlastSvc/GlastDetSvc/*.h ../GlastSvc/*.h \
                 GlastDetSvc/*.h EventSelector/*.h 

library GlastSvc GlastDetSvc/*.cxx\
                 EventSelector/*.cpp \
                  MonteCarlo/*.cpp\
		 Dll/*.cpp \
                 ${GlastSvc_headers}
            

# get flags to build shared library

apply_pattern package_Cshlibflags

private

# WinInclude is to allow header files to be added to the 
# VC++ workspace, without causing build problems on unix

macro WinInclude "" WIN32 "test/*.h  test/*.txt test/*.xml" 
public 
# build this for non-shareable testing
set JOBOPTIONS  "${GLASTSVCROOT}/src/test/jobOptions.txt"
application test  ${GlastMain} test/*.cpp   $(WinInclude) 

