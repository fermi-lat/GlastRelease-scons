package GlastSvc
version v9r4p1
branches src cmt doc

use Event v9r*
use xmlGeoDbs  v1r*
use detModel   v2r*
use CLHEP v2* IExternal

apply_pattern packageShr
apply_pattern package_include

#=============================================================

# private

macro GlastDetSvc_h    "" WIN32 "..\GlastSvc\GlastDetSvc\*.h GlastDetSVc\*.h"
macro GlastRandomSvc_h "" WIN32 "..\GlastSvc\GlastRandomSvc\*.h GlastRandomSvc\*.h"
macro EventSelector_h  "" WIN32 "..\GlastSvc\EventSelector\*.h EventSelector\*.h"

library GlastSvc ${GlastDetSvc_h}     GlastDetSvc/*.cxx\
	        ${GlastRandomSvc_h}  GlastRandomSvc/*.cxx\
                 ${EventSelector_h}   EventSelector/*.cpp \
	        Dll/*.cpp
            

# get flags to build shared library

apply_pattern package_Cshlibflags


macro WinInclude "" WIN32 "test/*.h  test/*.txt test/*.xml" 

# build this for non-shareable testing
set TESTJOBOPTIONS  "${GLASTSVCROOT}/src/test/jobOptions.txt"
application test_GlastSvc  ${GlastMain} test/*.cpp   $(WinInclude) 

