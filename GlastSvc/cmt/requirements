package GlastSvc
version v9r11

branches src cmt doc
#$Id$

use GlastPolicy *

apply_pattern packageShr
apply_pattern package_include

#=============================================================
# private
use Event v9r*
use detModel   v2r* -no_auto_imports
use xmlGeoDbs  v1r* -no_auto_imports
use CLHEP v2* IExternal -no_auto_imports
use xml * -no_auto_imports
use xmlUtil * -no_auto_imports
use XMLEXT * IExternal -no_auto_imports

macro headers "" WIN32 "*.h"
macro_append includes ' $(ppcmd)"$(xml_root)"'

library GlastSvc  -import=detModel -import=CLHEP -import=xml -import=xmlUtil \
     Dll/*.cpp \
     -s="../GlastSvc/GlastDetSvc" $(headers)\
     -s="GlastDetSvc $(headers) *.cxx\
     -s="../GlastSvc\GlastRandomSvc" $(headers)\
     -s="GlastRandomSvc" $(headers) *.cxx\
     -s="../GlastSvc\Reco" $(headers)\
     -s="Reco" $(headers) *.cxx\
     -s="../GlastSvc\MonteCarlo" $(headers)\
     -s="../GlastSvc\EventSelector" $(headers) \
     -s="EventSelector" $(headers) *.cpp 
            

# get flags to build shared library

apply_pattern package_Cshlibflags


macro WinInclude "" WIN32 "test/*.h  test/*.txt test/*.xml" 

# build this for testing
set TESTJOBOPTIONS  "${GLASTSVCROOT}/src/test/jobOptions.txt"
apply_pattern package_test

#application checkSeeds  test/checkSeeds.cxx   $(WinInclude) 

