package irfAnalysis

# $Id$

branches data

use RootPolicy *
use GlastPolicy *

apply_pattern package_linkopts

macro irfAnalysis_cppflags  ""\
  Linux "-I ../src -g -pedantic "\
  WIN32 " /I ..\src /wd4800 /wd4305"

macro_append ROOT_libs ""\
  Linux " -lTreePlayer -lProof -lGX11 "\
  WIN32 "  libHist.lib libGraf.lib libGpad.lib libPostScript.lib"

macro source "*.cxx" WIN32 "*.cxx *.h"

library     irfAnalysis -no_share $(source)

application psf_fit -s=psf_fit $(source)
application energy_fit -s=energy $(source)
application aeff     -s=aeff $(source)

#application energy $(source) -s=energy $(source)
#application psf    $(source) -s=psf $(source)
#application rewrite -s=newbranches $(source)

# where to save/get all files

set file_root "$(IRFANALYSISROOT)/root_files"
