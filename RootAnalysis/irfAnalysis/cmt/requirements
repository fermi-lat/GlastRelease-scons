package irfAnalysis

# $Id$

branches data

use RootPolicy *
use GlastPolicy *

macro irfAnalysis_cppflags  ""\
  Linux "-I ../src -g -pedantic "\
  WIN32 " /I ..\src /wd4800 /wd4305"

macro_append ROOT_libs ""\
  Linux " -lTreePlayer -lProof -lGX11 "\
  WIN32 "  libHist.lib libGraf.lib libGpad.lib"

macro source "*.cxx" WIN32 "*.cxx *.h"

application energy $(source) -s=energy $(source) 
application psf    $(source) -s=psf $(source)
application rewrite -s=newbranches $(source)

# where to save/get all files

set file_root "$(IRFANALYSISROOT)/data"