package detModel
# $Header$
version v2r14p1

use CLHEP v2* IExternal
use xmlUtil
use idents

include_dirs "${DETMODELROOT}"
apply_pattern package_linkopts


macro headers "" WIN32 "\
     ../detModel/Management/*.h \
     ../detModel/Sections/*.h \
     ../detModel/Constants/*.h \
     ../detModel/Materials/*.h \
     ../detModel/Utilities/*.h ../detModel/GDD.h"

library detModel -no_share  $(headers) \
      Management/*.cxx \
      Sections/*.cxx \
      Constants/*.cxx \
      Utilities/*.cxx \
      Materials/*.cxx \
      Gdd.cxx
	
private
apply_pattern package_Lshlibflags
    
application test main.cxx 




