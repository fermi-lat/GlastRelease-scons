package CalXtalResponse
author zachary.fewtrell@nrl.navy.mil

branches src cmt doc

use GlastPolicy
use GaudiInterface * IExternal
use ROOT           * IExternal
use CLHEP          * IExternal
use CalUtil
use CalibData
use GlastSvc
use ntupleWriterSvc

# Additional ROOT libraries Needed for TSpline3 object
macro_append ROOT_linkopts " $(ROOT_GUI_libs)"

# These macros are needed by any package that means to share a library & it's headers
apply_pattern packageShr
apply_pattern package_include
apply_pattern package_headers

library CalXtalResponse *.cxx *.h Dll/*.cxx Dll/*.h ${CalXtalResponse_headers} \
        CalCalib/*.cxx CalCalib/*.h XtalDigi/*.cxx XtalDigi/*.h XtalRecon/*.cxx XtalRecon/*.h \
        CalTrig/*.cxx CalTrig/*.h *.txt CalTuple/*.cxx CalTuple/*.h \
	CalFailureMode/*.cxx CalFailureMode/*.h

#=============================================================
private

#needed only for the test app
use CalibSvc

# Needed for CalibData::CAL_TholdCI, Ped, etc... predefined strings
# causes a linker warning, so i won't make it public
apply_pattern use_CalibData_symbols

apply_pattern package_Cshlibflags 

# sets up standard test executable and job options file
apply_pattern package_test
