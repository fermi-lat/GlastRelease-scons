# special guy to allow AcdRecon to link in the common_files below
macro_append AcdUtil_linkopts \
        "${AcdUtil_root}/${BINDIR}/libAcdUtilCommon.a"\
  WIN32 "${AcdUtil_root}/${BINDIR}/AcdUtilCommon.lib "


#=============================================================
private

macro common_files "AcdTileDim.cxx AcdRibbonDim.cxx"

library AcdUtilCommon -no_share $(common_files)

library AcdUtil $(common_files)\
		AcdGeometrySvc.cxx AcdDetectorList.cxx RayDoca.cxx \
                Dll/*.cxx \
                test/*.cxx \
                ${AcdUtil_headers}               

