apply_pattern package_include

apply_pattern package_headers

#=============================================================
private

# pattern of the sort that should be in GlastPatternPolicy
# this version implements Navid's common lib strategy

pattern add_lib_to_linkopts \
  macro_append <package>_linkopts " "\
  Linux "$(<package>_cmtpath)/lib/lib<name>_${tag}_<version>.a "\
  WIN32 "$(<package>_cmtpath)\lib\<name>_${tag}_<version>.lib "
#
# now use it to add the static library to this package's link options

apply_pattern add_lib_to_linkopts name=AcdUtilCommon

library AcdUtilCommon -no_share AcdTileDim.cxx AcdRibbonDim.cxx


library AcdUtil AcdGeometrySvc.cxx AcdDetectorList.cxx RayDoca.cxx \
                Dll/*.cxx \
                test/*.cxx \
                ${AcdUtil_headers}               

apply_pattern package_Cshlibflags

public

apply_pattern package_test

