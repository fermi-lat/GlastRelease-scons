package EbfWriter
version v0

use GlastPolicy 	v5*
use Event 		*
use ebfReader		*
use IExternal		*
use TkrRecon		*
use GlastSvc		*
use FluxSvc		*
use reconRootData	*
use commonRootData	*
use Gleam		*
use GuiSvc		*
# Use this pattern for shareable libraries that Gaudi must load
apply_pattern packageShr
apply_pattern package_include
apply_pattern library_Llinkopts library="EbfWriterTds"

apply_pattern package_header

library EbfWriterTds -no_share Ebf.cxx

library EbfWriter *.cxx Dll/*.cxx

# Flags for building shared libraries
apply_pattern package_Cshlibflags

use FluxSvc 		*

apply_pattern package_test
set TESTJOBOPTIONS ${EBFWRITERROOT}/src/test/jobOptions.txt
